{
    "manifest_version": 2,
    "name": "YoutubeEditPlayerHeight",
	"version": "2.0.0",
    "description": "Changes Youtube video player height",
    "icons": {
      "64": "icons/youtube-svgrepo-com.svg"
    },
    "content_scripts": [
		{
			"matches": ["*://www.youtube.com/*"],
			"js": ["app.js"]
		}
	],
	"background": {
        "scripts": ["background.js"]
    },
	"permissions": [
		"tabs"
	],
	"browser_specific_settings":
		{
			"gecko": { "id": "corn.poppari@gmail.com" }
		}
}